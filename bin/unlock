#!/bin/bash

if [ -z "$1" ]
  then
    echo "No File Specified"
    exit
fi

file=$(echo $1 | cut -f 1 -d '.')
tarballed_file="$file.tar.gz"
encrypted_file="$file.tar.gz.enc"

echo "unencrypting..."
openssl enc -aes-256-cbc -d -in $encrypted_file  -out $tarballed_file
echo "unarchiving..."
tar -xvzf $tarballed_file $file

echo "removing old files..."
rm -rfP $tarballed_file
rm -rfP $encrypted_file

exit
