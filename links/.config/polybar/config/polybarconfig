label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.light-blue}

[settings]
screenchange-reload = true


[module/network]
type = internal/network
; Name of the network interface to display. You can get the names of the
; interfaces on your machine with `ip link`
; Wireless interfaces often start with `wl` and ethernet interface with `eno` or `eth`
interface = ${env:IFNAME}

; Seconds to sleep between updates
; Default: 1
interval = 3.0


; Accumulate values from all interfaces
; when querying for up/downspeed rate
; Default: false
accumulate-stats = true

format-connected-background = ${colors.background}
format-connected-spacing = 0

label-connected = "%{F#689d6a}%{F-}%downspeed:2%%{F-} %{F#689d6a}%{T7}%{F-}%upspeed:2%%{F-}"
format-connected = "%{T6}%{F#83a598}直%{F-}<label-connected>"

format-connected-padding = 3

[module/vpn]
type = internal/network
; Name of the network interface to display. You can get the names of the
; interfaces on your machine with `ip link`
; Wireless interfaces often start with `wl` and ethernet interface with `eno` or `eth`
interface = proton0

; Seconds to sleep between updates
; Default: 1
format-connected-background = ${colors.background}

format-connected = "%{T6}%{F#83a598}[vpn]%{F-}"
