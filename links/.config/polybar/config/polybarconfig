format-discharging = %{T6}<ramp-capacity><label-discharging>

format-full-background = ${colors.background}
format-full-prefix = ""
format-full-prefix-foreground = ${colors.light-blue}
format-full = "%{T2}<label-full>"
ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-foreground = ${colors.light-blue}
format-charging-padding = 2
