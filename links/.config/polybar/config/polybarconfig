time = %a %b %m-%d %I:%M%p
time-alt = %I:%M:%S%p
format-background = ${colors.background}
format-padding = 3


format-prefix-foreground = ${colors.light-blue}
format-prefix = ""

label = %date% %time%

[module/battery]
