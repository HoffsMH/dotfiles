@XF86MonBrightnessDown
  light -U 5

hyper + F1
  light -U 5

hyper + g
  xclip -o | xargs xdg-open

@XF86MonBrightnessUp
  light -A 5

@hyper + F2
  light -A 5

@XF86AudioLowerVolume
  pulsemixer --change-volume -3

@XF86AudioRaiseVolume
  pulsemixer --change-volume +3

{@hyper + F11, @hyper + @XF86AudioLowerVolume, @hyper + minus}
  kitty htop

{@hyper + @XF86AudioRaiseVolume, @hyper + F12, @hyper + equal}
  kitty pulsemixer

@XF86KbdBrightnessUp
  light -As "sysfs/leds/smc::kbd_backlight" 3

@XF86KbdBrightnessDown
  light -Us "sysfs/leds/smc::kbd_backlight" 3

control + shift + 4
  flameshot gui

control + alt + Right
  xdotool search --name "firefox" key "ctrl+Page_Down"

control + alt + Left
  xdotool search --name "firefox" key "ctrl+Page_Up"

control + space
  rofi -show combi -matching fuzzy

hyper + v
  rofi -modi ":greenclip print" -show  -matching fuzzy -run-command '{cmd}'

hyper + {@XF86AudioMute,F10} ; w
  kitty wttr
