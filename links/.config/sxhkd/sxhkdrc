@XF86MonBrightnessDown
  light -U 5

hyper + F1
  light -U 5

hyper + g
  xclip -o | xargs xdg-open

@XF86MonBrightnessUp
  light -A 5

@hyper + F2
  light -A 5

@XF86AudioLowerVolume
  pulsemixer --change-volume -3

@XF86AudioRaiseVolume
  pulsemixer --change-volume +3

@XF86KbdBrightnessUp
  light -As "sysfs/leds/smc::kbd_backlight" 3

@XF86KbdBrightnessDown
  light -Us "sysfs/leds/smc::kbd_backlight" 3

control + shift + 4
  flameshot gui

control + alt + Right
  xdotool search --name "firefox" key "ctrl+Page_Down"

control + alt + Left
  xdotool search --name "firefox" key "ctrl+Page_Up"

control + space
  rofi -show drun -matching fuzzy

alt + space
  rofi -show run -matching fuzzy

hyper + v
  rofi -modi ":greenclip print" -show  -matching fuzzy -run-command '{cmd}'

@hyper + {0,@XF86AudioMute,F10} ; w
  kitty wttr

@hyper + {F11, @XF86AudioLowerVolume, minus}
  kitty htop

@hyper + {@XF86AudioRaiseVolume, F12, equal}
  kitty pulsemixer

@hyper + @shift + y ; a
  ~/bin/yta

@hyper + @shift + y ; v
  ~/bin/ytv

@hyper + @shift + y ; g
  notify-send "starting ytgo" && ~/bin/ytgo && ~/bin/ytclear && notify-send "ytgo done"

@hyper + @shift + y ; w
  notify-send "starting download of $(xclip -o)" && axel -c $(xclip -o) -o ~/personal/media/image/library/wall/wall-cp/. && notify-send "wall paper download of $(xclip -o)"

@hyper + @shift + y ; m
  notify-send "starting meme download of $(xclip -o)" && axel -c $(xclip -o) -o ~/personal/media/image/library/meme/. && notify-send "meme download of $(xclip -o)"

@hyper + @shift + p
  notify-send "playing $(xclip -o)" && mpv --no-audio-display --loop-playlist $(xclip -o)
