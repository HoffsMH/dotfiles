#!/bin/bash

if [ -z "$1" ]
  then
    echo "No Folder specified"
    exit
fi

file=$1
tarballed_file="$file.tar.gz"
encrypted_file="$file.tar.gz.enc"

echo "archiving..."
tar -cvzf $tarballed_file $file
echo "encrypting..."
openssl enc -aes-256-cbc -in $tarballed_file -out $encrypted_file

echo "removing old files..."
rm -rfP $file
rm -rfP $tarballed_file


exit
